
@{
    ViewBag.Title = "ValidateMobile";
}

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<form id="mobileForm" method="post" action="@Url.Action("ValidateMobile", "Mobile")">
    <div class="container">
        <div class="card">
            <div class="card-header text-center"><h3>Mobile Number Validation</h3></div>
            <div class="card-body">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-2 col-xl-2 col-xxl-2"></div>
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-4 col-xl-4 col-xxl-4">
                        <label for="mobileNumber">Mobile Number</label>
                        <input type="text" id="mobileNumber" name="mobileNumber" class="form-control" autocomplete="off" maxlength="10" />
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-4 col-xl-4 col-xxl-4">
                        <label for="mobileOtp">OTP</label>
                        <input type="text" id="mobileOtp" name="mobileOtp" class="form-control" autocomplete="off" maxlength="4" />
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-2 col-xl-2 col-xxl-2"></div>
                </div>
                <div class="row mt-4">
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-4 col-xl-4 col-xxl-4"></div>
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-4 col-xl-4 col-xxl-4 text-center">
                        <button type="submit" class="btn btn-outline-success">Submit</button>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-10 col-lg-4 col-xl-4 col-xxl-4"></div>
                </div>
            </div>
        </div>
    </div>
</form>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#mobileForm').on('submit', function (e) {
            e.preventDefault();
            var mobileNumber = $('#mobileNumber').val();
            var otp = $('#mobileOtp').val();
            var isValid = true;
            var mobileRegex = /^[0-9]{10}$/;
            if (!mobileRegex.test(mobileNumber)) {
                alert('Please enter a valid 10-digit mobile number.');
                isValid = false;
            }
            if (otp.trim() === "") {
                alert('Please enter the OTP.');
                isValid = false;
            }
            if (isValid) {
                this.submit();
            }
        });
    });
</script>


